@model ParticipationViewModel
@{ 
    if (Model != null)
    {
        ViewBag.Title = Model.Competition.Name;
    }
}

<div>
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Statement</th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Problems.Count; i++)
                {
                    <tr>
                        <td>@Model.Problems[i].Name</td>
                        <td><a href="#">PDF</a></td>
                    </tr>
                }
             }
        </tbody>

    </table>
    @using (Html.BeginForm())
    {

    }
</div>