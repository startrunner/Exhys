@model ParticipationViewModel
@{ 
    
}
<!doctype html>
<html>
<head>
    @if(Model!=null&&Model.Competition!=null)
    {
        <title>@Model.Competition.Name - Exhys</title>
    }
    @Styles.Render("~/Content/css", "~/Content/custom-css")
</head>
<body>

    @*Navigation Bar*@
    <section class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">
                @if (Model != null && Model.Competition != null)
                {
                    @Model.Competition.Name
                }
            </a>
        </div>
    </section>

    <br /><br /><br />
    @*Problem List*@
    <section>
        <table border="1">
            <thead>
                <tr>
                    <th colspan="2">Problems</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Statement</th>
                </tr>
            </thead>
            <tbody>
                @for(int i=0;i<Model.Competition.Problems.Count;i++)
                {
                    <tr>
                        <td>@Model.Competition.Problems[i].Name</td>
                        <td>
                            @for(int j=0;j<Model.Competition.Problems[i].ProblemStatements.Count;j++)
                            {
                                <div>
                                    @using (Html.BeginForm(method: FormMethod.Get, actionName: "DownloadStatement", controllerName: "Competitions"))
                                    {
                                        <input type="hidden" name="id" value="@Model.Competition.Problems[i].ProblemStatements[j].Id"/>
                                        <button type="submit">@Model.Competition.Problems[i].ProblemStatements[j].Filename</button>
                                    }
                                </div>
                            }
                        </td>
                    </tr>
                }
                <tr>
                    <td><br/></td>
                    <td><br/></td>
                </tr>
            </tbody>
        </table>
    </section>

    <br /><br /><br />
    @*Submission*@
    <section>
        <label>Submit a Solution</label>
        @using (Html.BeginForm())
        {
            var vm = new ProblemSolutionViewModel();

            <div class="form-group">
                @Html.FixedDropDownListFor(m => vm.ProblemId, ViewData.GetProblemOptions())
            </div>

            <div class="form-group">
                <input type="file" id="input-sol-file" name="@ProblemSolutionViewModel.FileInputName" />
            </div>

            <div class="form-group">
                @Html.FixedDropDownListFor(m=>vm.LanguageAlias, ViewData.GetProgrammingLanguageOptions())
            </div>

            <div class="form-group">
                <button type="submit">Submit Solution</button>
            </div> 
        }
        
    </section>

    <br /><br /><br />
    @*Previous Submissions*@
    <section>
        <span>Previous Submissions</span>
        <table>
            <thead>
                <tr>
                    <th>Problem</th>
                    <th>Score</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Pr1</td>
                    <td>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <strong>Total: 10</strong>
                    </td>
                    <td>12:30</td>
                </tr>

                <tr>
                    <td>Pr2</td>
                    <td>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <span>10</span>
                        <strong>Total: 10</strong>
                    </td>
                    <td>12:30</td>
                </tr>

                <tr>
                    <td>Pr1</td>
                    <td>
                        <strong>Pending Evaluation</strong>
                    </td>
                    <td>12:30</td>
                </tr>
            </tbody>
        </table>
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $('button').addClass('btn btn-default');
    </script>
</body>
</html>