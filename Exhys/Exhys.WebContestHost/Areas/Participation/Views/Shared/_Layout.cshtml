<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/WebRoot/Styles/participation.min.css"/>
</head>
<body>
    <header>
        <h1>@ViewBag.Title</h1>
        @{ 
            var user = ViewData.GetSignedInUser();
            if(user==null || user.IsGuest)
            {
                <div>
                    Welcome, Guest
                </div>
            }
            else
            {
                <div>
                    Welcome, @(user.FullName)
                    @Html.ActionLink(linkText:"Sign Out", controllerName:@"../Accounts/Account", actionName:"SignOut")
                </div>
            }
        }
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>