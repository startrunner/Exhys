@model List<ProblemViewModel>
<section>
	<br />
	@using(Html.BeginForm())
	{
		<button type="submit">Save Changes</button> 
		<br /><br />
		<table class="table table-hover table-bordered table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Competition</th>
					<th>Delete?</th>
				</tr>
			</thead>
			<tbody>
				@for(int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>
							@Html.HiddenFor(m => m[i].Id)
							@Html.TextBoxFor(m => m[i].Name)
						</td>
						<td>
							@Html.FixedDropDownListFor(m => m[i].CompetitionId, ViewData.GetCompetitionOptions())
						</td>
						<td>
							@Html.CheckBoxFor(m => m[i].RequestDelete)
						</td>
					</tr>
				}
			</tbody>
		</table>
		<button type="submit">Save Changes</button>
	}
</section>
