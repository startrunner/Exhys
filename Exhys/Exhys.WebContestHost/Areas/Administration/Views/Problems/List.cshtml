@model IList<ProblemViewModel>
<div>
    @using (Html.BeginForm())
    {
        <table border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Competition</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Html.TextBoxFor(m => m[i].Id)</td>
                            <td>@Html.TextBoxFor(m => m[i].Name)</td>
                            <td>
                                @*@Html.ActionLink(linkText:Model[i].CompetitionName, controllerName:"Competitions", actionName:"Edit", routeValues: new { id=Model[i].CompetitionId }, htmlAttributes:new { })*@
                                __
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>

