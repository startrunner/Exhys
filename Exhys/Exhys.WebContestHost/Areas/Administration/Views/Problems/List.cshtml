@model List<ProblemViewModel>
<section>
    @using (Html.BeginForm())
    {
        <button type="submit">Save Changes</button>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Delete?</th>
                </tr>
            </thead>
            <tbody>
                @for(int i=0;i<Model.Count;i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(m => m[i].Id)
                            @Html.HiddenFor(m => m[i].T_InputFeedbacks)
                            @Html.HiddenFor(m => m[i].T_OutputFeedbacks)
                            @Html.HiddenFor(m => m[i].T_SolutionFeedbacks)
                            @Html.HiddenFor(m => m[i].T_StatusFeedbacks)
                            @Html.HiddenFor(m => m[i].T_TimeLimits)

                            @Html.TextBoxFor(m => m[i].Name)
                        </td>
                        <td>
                            @Html.FixedDropDownListFor(m => m[i].CompetitionId, ViewData.GetCompetitionOptions())
                        </td>
                        <td>
                            @Html.CheckBoxFor(m => m[i].RequestDelete)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit">Save Changes</button>
    }
</section>
