@model IList<CompetitionViewModel>
<div>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <button type="submit">Save Changes</button>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>User Group</th>
                    <th>Delete</th>
                    @*<th>Edit</th>*@
                </tr>
            </thead>
            <tbody>
                @{ 
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Html.TextBoxFor(m => m[i].Id, new { readOnly = "" })</td>
                            <td>@Html.TextBoxFor(m => m[i].Name)</td>
                            <td>@Html.TextBoxFor(m => m[i].Description)</td>
                            <td>
                                @Html.FixedDropDownListFor(m=>m[i].GroupId, ViewData.GetUserGroupOptions())
                            </td>
                            <td>@Html.CheckBoxFor(m => m[i].RequestDelete)</td>
                            @*<td>
                                @Html.ActionLink(linkText: "Edit", actionName: "Edit", routeValues: new { id = Model[i].Id })
                            </td>*@
                        </tr>
                    }
                }
            </tbody>
        </table>
        <button type="submit">Save Changes</button>
    }
</div>