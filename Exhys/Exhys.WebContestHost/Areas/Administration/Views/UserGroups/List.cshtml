@model IList<UserGroupViewModel>
<div>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <table border="1">
            <thead>
                <tr>
                    <td>Group Id</td>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Is Admin</td>
                    <td>Is Open</td>
                    <td>Delete Group</td>
                </tr>
            </thead>
            <tbody>
                @{ 
                    for(int i=0;i<Model.Count;i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(m=>m[i].Id)
                                @Model[i].Id
                            </td>
                            <td>@Html.TextBoxFor(m=>m[i].Name)</td>
                            <td>@Html.TextBoxFor(m=>m[i].Description)</td>
                            <td>@Html.CheckBoxFor(m=>m[i].IsAdmin)</td>
                            <td>@Html.CheckBoxFor(m=>m[i].IsOpen)</td>
                            <td>@Html.CheckBoxFor(m=>m[i].RequestDelete)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <button type="submit">Save Changes</button>
    }
</div>