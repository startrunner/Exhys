@{
	ViewData.SetPageTitle("Add Users");
}
<div>
	<br /><br />
	<div class="col-lg-6">
		@using(Html.BeginForm("AddMany","UserAccounts",FormMethod.Post,new { @class = "form-horizontal well" }))
		{
			<fieldset>
				<legend>Register Users</legend>
				<div class="form-group">
					<label for="inputPrefix" class="col-lg-2 control-label">Prefix</label>
					<div class="col-lg-10">
						<input type="text" class="form-control" id="inputPrefix" placeholder="Prefix" name="prefix" value="A" />
					</div>
				</div>
				<div class="form-group">
					<label for="input-count" class="col-lg-2 control-label">Count</label>
					<div class="col-lg-10">
						<input class="form-control" min="1" id="input-count" type="number" placeholder="Count" name="count" value="10" onchange="document.getElementById('txt1').rows = document.getElementById('input-count').rows = document.getElementById('input-count').value;" />
					</div>
				</div>
				<div class="form-group">
					<label for="select" class="col-lg-2 control-label">Group</label>
					<div class="col-lg-10">
						@Html.FixedDropDownListFor("groupId", ViewData.GetUserGroupOptions(), new { @class = "form-control padding-0" })
					</div>
				</div>
				<div class="form-group">
					<label for="txt1" class="col-lg-2 control-label">Names</label>
					<div class="col-lg-10">
						<textarea class="form-control" name="fullNames" rows="10" id="txt1" style="resize:none" placeholder="Competitor First Names (separated by new lines)"></textarea>
					</div>
				</div>
				<div class="form-group">
					<div class="col-lg-10 col-lg-offset-2">
						<button type="reset" class="btn btn-default">Reset</button>
						<button type="submit" class="btn btn-primary">Add Users</button>
					</div>
				</div>
			</fieldset>
		}
	</div>
</div>