@model List<UserAccountViewModel>
<div>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <button type="submit">Save Changes</button>
        <table border="1">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>User Group</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    for(int i=0;i<Model.Count;i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Html.TextBoxFor(m=>m[i].UserId, new { readOnly = "" })</td>
                            <td>@Html.TextBoxFor(m=>m[i].Username, new { readOnly = "" })</td>
                            <td>@Html.TextBoxFor(m=>m[i].Password)</td>
                            <td>
                                @Html.FixedDropDownListFor(m=>m[i].GroupId, ViewData.GetUserGroupOptions())
                            </td>
                            <td>@Html.TextBoxFor(m=>m[i].FirstName)</td>
                            <td>@Html.TextBoxFor(m=>m[i].LastName)</td>
                            <td>@Html.CheckBoxFor(m=>m[i].RequestDelete)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <button type="submit">Save Changes</button>
    }
</div>