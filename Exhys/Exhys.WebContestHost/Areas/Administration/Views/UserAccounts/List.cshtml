@model List<UserAccountViewModel>
@{
	ViewData.SetPageTitle("List Users");
}
<div>
	<div>
		<br />
		@using(Html.BeginForm(FormMethod.Post))
		{
			<button type="submit">Save Changes</button>
			<br /><br />
			<table class="table table-hover table-bordered table-striped">
				<thead class="th-center">
					<tr>
						<th>No.</th>
						<th>User ID</th>
						<th>Username</th>
						<th>Password</th>
						<th>Group</th>
						<th>Name</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					@{
						for(int i = 0; i < Model.Count; i++)
						{
							<tr>
								<td class="text-center">
									@(i + 1)
								</td>
								<td class="text-center">
									@Html.HiddenFor(m => m[i].UserId)
									@Model[i].UserId
								</td>
								<td>
									@Html.HiddenFor(m => m[i].Username, new { readOnly = "" })
									@Model[i].Username
								</td>
								<td>
									@Html.TextBoxFor(m => m[i].Password, new { Class = "form-control height-25px" })
								</td>
								<td>
									@Html.FixedDropDownListFor(m => m[i].GroupId, ViewData.GetUserGroupOptions())
									@*
										class="form-control"
									*@
								</td>
								<td>
									@Html.TextBoxFor(m => m[i].FullName, new { Class = "form-control height-25px" })
								</td>
								<td class="text-center">
									@Html.CheckBoxFor(m => m[i].RequestDelete)
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
			<button type="submit">Save Changes</button>
		}
	</div>
</div>