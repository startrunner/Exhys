@model Exhys.WebContestHost.Areas.Shared.ViewModels.UserAccountViewModel
<!doctype html>
<html>
<head>

</head>
<body>
    <header></header>
    <section>

        @using (Html.BeginForm(FormMethod.Post))
        {
            <div>
                <ul>
                    @{ 
                        if(ViewBag.Errors is IEnumerable<string>)
                        {
                            foreach(var v in ViewBag.Errors)
                            {
                                <li>@v</li>
                            }
                        }
                    }
                </ul>
            </div>
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" });
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" });
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" });
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" });
            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" });
            <button type="submit">Register</button>
        }
    </section>
    <footer></footer>
</body>
</html>