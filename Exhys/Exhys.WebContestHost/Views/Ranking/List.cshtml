@model List<CompetitionViewModel>
	<ul class="breadcrumb">
		<li><a href="/Participation/List">Home</a></li>
		<li class="active">Ranking</li>
	</ul>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Description</td>
                        <td>
                            @Html.ActionLink("Click", "View", new { id = Model[i].Id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>